<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Post | Wiedmolol</title>
    <link rel="stylesheet" href="{{ asset('css/geraltofrivia.css') }}">
    <link rel="icon" href="{{ asset('img/logo.svg') }}" type="image/svg+xml">
</head>
<body>
<div class="main-container">
    <header>
        <div class="header-left">
            <a href="{{ path('homepage') }}"><img src="{{ asset('img/logo.svg') }}" alt="Logo" class="logo"></a>
            <h1 class="site-name">Wiedmolol</h1>
        </div>
        <div class="header-right">
            <form id="search-form" action="{{ path('homepage') }}" method="get">
                <input type="text" id="search-bar" name="search" class="search-bar" placeholder="Search..." value="{{ query is defined ? query : '' }}">
            </form>
            {% if app.user %}
                <a href="{{ path('app_profile') }}">
                    <img src="{{ asset('img/profile.svg') }}" alt="Profile" class="icon icon-profile">
                </a>
            {% else %}
                <a href="{{ path('app_login') }}">
                    <img src="{{ asset('img/profile.svg') }}" alt="Zaloguj siÄ™" class="icon icon-profile">
                </a>
            {% endif %}
        </div>
    </header>

    <section class="content">
        <div class="create-content">
            <h1>Upload</h1>
            {{ form_start(postForm, { 'attr': {'class': 'create-post-form'} }) }}
            {{ form_row(postForm.name, {'attr': {'class': 'form-input title-input', 'placeholder': 'Title'}}) }}
            {{ form_row(postForm.content, {'attr': {'class': 'form-input content-input', 'rows': '10', 'placeholder': 'Content'}}) }}
            <button type="submit" class="submit-button">Submit</button>
            {{ form_end(postForm) }}
        </div>
    </section>
</div>
</body>
</html>
