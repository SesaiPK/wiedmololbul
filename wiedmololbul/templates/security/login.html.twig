{% extends 'security/auth_base.html.twig' %}

{% block title %}Login - Wiedmolol{% endblock %}

{% block content %}
    <div class="container">
        <form method="post" class="login-form">
            {% for message in app.flashes('error') %}
                <p class="error-message">{{ message }}</p>
            {% endfor %}

            <input type="email" id="email" name="_username" placeholder="E-mail" required autofocus value="{{ last_username }}">
            <input type="password" id="password" name="_password" placeholder="Password" required>
            <input
                    type="hidden"
                    name="_csrf_token"
                    value="{{ csrf_token('authenticate') }}"
            />
            <button type="submit" name="logIn">Login</button>
        </form>
    </div>

    <div class="signup-bar">
        <p>Don't have an account?</p>
        <a href="{{ path('app_register') }}">
            <button name="signUp">Sign Up</button>
        </a>
    </div>
{% endblock %}
